<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <display-name>breeze-base</display-name>
    <!-- 系统初始化 -->
    <listener>
        <listener-class>org.breeze.core.listener.CoreInitListener</listener-class>
    </listener>
    <!-- 为每个请求设置默认编码 -->
    <filter>
        <filter-name>CharacterencodingFilter</filter-name>
        <filter-class>org.breeze.core.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterencodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 控制器 -->
    <filter>
        <description>服务控制器，注意在此filter后的filter将全部失效(除ControllerFilter、AjaxFilter)，如果需要过滤请在此前插入filter</description>
        <filter-name>ServiceController</filter-name>
        <filter-class>org.breeze.core.filter.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServiceController</filter-name>
        <url-pattern>/service/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>